{
    "data step": {
        "prefix": "data",
        "body": [
            "DATA $1;",
            "\t$2",
            "RUN;\n"
        ],
        "description": "data step"
    },
    "line comments": {
        "prefix": "coli",
        "body": [
            "* $1 ;"
        ],
        "description": "line comments"
    },
	"heading1 comments": {
        "prefix": "coh1",
        "body": [
            "/* ###################################################################",
            "				$1",
            "####################################################################*/"
        ],
        "description": "heading1 comments"
    },
	"heading2 comments": {
        "prefix": "coh2",
        "body": [
            "/* ===============================================================",
            "				$1",
            "================================================================*/"
        ],
        "description": "heading2 comments"
    },
	"heading3 comments": {
        "prefix": "conote",
        "body": [
            "/* -------------------------------",
            "$1",
            "--------------------------------*/"
        ],
        "description": "heading3/note comments"
    },
    "section comments": {
        "prefix": "cosc",
        "body": [
            "* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~;",
            "*			$1",
            "* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~;"
        ],
        "description": "section comments"
    },
    "MACRO": {
        "prefix": "macro step",
        "body": [
            "%MACRO $1($2 = ,);",
            "\t$3",
            "%MEND;"
        ],
        "description": "macro step"
    },
    "proc format":{
        "prefix": "fmt",
        "body":[
            "PROC FORMAT;",
            "\tvalue ${1:txtfmt}",
            "\t\"$2\" = \"$3\"",
            "\t\"$4\" = \"$5\"",
            "\t\"$6\" = \"$7\"",
            "\t;",
            "RUN;\n$0"
        ],
        "description": "proc fromat"
    }
}
